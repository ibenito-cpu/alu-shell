#!/usr/bin/env bash
# This script manages the manage_my_process program
# Usage: ./11-manage_my_process {start|stop|restart}

PID_FILE="/var/run/my_process.pid"
SCRIPT_PATH="/path/to/manage_my_process"  # replace with actual path if needed

start() {
    "$SCRIPT_PATH" &
    echo $! > "$PID_FILE"
    echo "manage_my_process started"
}

stop() {
    if [ -f "$PID_FILE" ]; then
        kill "$(cat "$PID_FILE")"
        rm -f "$PID_FILE"
    fi
    echo "manage_my_process stopped"
}

restart() {
    stop
    start
    echo "manage_my_process restarted"
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        ;;
esac

